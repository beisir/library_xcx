/* pages/class/class.wxss */
.classLeft{width:180rpx;left:0;top:0; background: #fff;overflow-y: scroll; position: fixed; bottom:105rpx;}
.classLeft text{ height: 100rpx;line-height: 100rpx; color:#333; font-size: 26rpx; text-align: center; display: block; border-bottom: 1rpx solid #e4e4e4;}
.classLeft::-webkit-scrollbar,.classRig::-webkit-scrollbar {display:none;}
text.classCur{ background: #f5f5f5; color: #ef322c; margin: -1rpx 0 0; border-bottom: none;}
.classRig{position:fixed;top:0;right:20rpx;left:200rpx;bottom:105rpx;overflow-y:scroll;}
.classRigCon{ overflow: hidden;}
.classRigTitCon{ height: 82rpx; line-height: 82rpx;}
.classRigTit{float: left; color: #333; line-height: 82rpx; font-size: 26rpx;}
.classRigMore{float: right; color: #999; line-height: 82rpx; font-size: 24rpx; display: block; text-align: right; width:120rpx; padding-right: 30rpx;background:url(https://192.168.120.32/images/cpk/cpkIndexIco.png) 66px -388rpx no-repeat; background-size: 300rpx 600rpx;}
.classRigBot{background: #fff; padding:20rpx 30rpx; overflow: hidden;}
.classLink{ float: left; width: 33.333%; font-size: 24rpx; color: #666; text-align: center; padding: 10rpx 0 15rpx;}
.classLink image{width:120rpx;height:120rpx; margin: 0 auto;}
.classLink text{display: block; line-height: 40rpx;}

.scroll-view{
    height: 100%;
}