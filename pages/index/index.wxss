/**index.wxss**/
view,input{box-sizing:border-box;}
.topSearch{ background:#181818; height:100rpx;}
.searchCon{padding:20rpx; position: relative;}
.searchCon .input{box-sizing: border-box;color:#ccc; background: #fff;font-size:30rpx;height:60rpx; border-radius: 30rpx; line-height: 60rpx; border: none;width:100%;padding-left:70rpx;}
.searchCon:before{ content:""; display: block; position: absolute; top: 20rpx;left:20rpx; height: 60rpx; width: 60rpx; background:url(https://style.org.hc360.com/images/cpk/cpkIndexIco.png) 22rpx 17rpx no-repeat; background-size: 300rpx 600rpx;}
.scroll{overflow: hidden; position: relative;}
.scrollCon{height:170rpx;}
.scrollImg{height:170rpx;width:100%; }
.scrollIco{ position: absolute; bottom:8rpx;width:100%; text-align:right;right:20rpx;}
.scrollIco icon{ display: inline-block; height: 8rpx;width:8rpx; z-index: 5; border: 1rpx solid #fff; margin: 0 10rpx; border-radius: 50%;}
.scrollIco icon.cur{ background: #fff;}
.navBox{border-bottom:2rpx solid #f5f5f5; height: 180rpx;padding:0 20rpx;background: #fff;}
.navBox icon{display: block;width:120rpx;height:90rpx; margin: 0 auto;background:url(https://style.org.hc360.com/images/cpk/cpkIndexIco.png) 0 0 no-repeat; background-size: 300rpx 600rpx;}
icon.ico1{width:90rpx; background-position:15rpx -38rpx;}
icon.ico2{ background-position:-71rpx -38rpx;}
icon.ico3{width:110rpx; background-position:-194rpx -42rpx;}
icon.ico4{width:90rpx; background-position:10rpx -132rpx;}
.navBox text{font-size:24rpx;color:#333;}
.navTit{ float: left;width:25%; text-align: center;padding:15rpx 0;/*height:180rpx*/}
.hcNewsList{ overflow: hidden; padding: 20rpx;height:120rpx;background: #fff;}
.newsIco{ display:block; float: left;height:80rpx;width:80rpx;background:url(https://style.org.hc360.com/images/cpk/cpkIndexIco.png) -226rpx -156rpx no-repeat; background-size: 300rpx 600rpx;}
.newsListCon{line-height: 40rpx;height:80rpx; padding-left: 25rpx; float: left; width:calc(100% - 80rpx); margin-top: 4rpx;}
.newsListCon text{line-height: 40rpx; font-size: 26rpx; color: #333;text-overflow:ellipsis;white-space:nowrap;overflow:hidden; display: block; position: relative;padding-left:68rpx;}
.hotIco{ position: absolute; display:block;left:0;width:48rpx;height:22rpx; text-align: center; line-height: 22rpx; border: 1rpx solid #ef322c; border-radius:4rpx;top:8rpx; font-size:16rpx;color:#ef322c;}
.list{position: relative; overflow: hidden; height: 40rpx;}
.box1,.box2{overflow: hidden; padding:20rpx 5px 0; background: #f5f5f5;}
.box1Tit{padding:16rpx 0 36rpx; position: relative;}
.box1Tit text{ display: block;width:282rpx;height:38rpx; margin: 0 auto; font-size:34rpx; text-align: center;color:#ef322c; background:url(https://style.org.hc360.com/images/cpk/titBg.png) 0 0 no-repeat; background-size:342rpx 106rpx; line-height: 36rpx; padding-left:60rpx;}
.moreLink{height:26rpx; position: absolute; right:20rpx;top:21rpx;color:#999;font-size:24rpx; line-height: 26rpx; padding-right:35rpx;background:url(https://style.org.hc360.com/images/cpk/cpkIndexIco.png) -220rpx 0 no-repeat; background-size: 300rpx 600rpx;}
.box2Tit text{ display: block;width:268rpx;height:38rpx; margin: 0 auto; font-size:34rpx; text-align: center;color:#ef322c; background:url(https://style.org.hc360.com/images/cpk/titBg.png) 0 -68rpx no-repeat; background-size:342rpx 106rpx; line-height: 36rpx; padding-left:52rpx;} 
.box2Tit{padding:16rpx 0 42rpx; position: relative;}
.phcolor{color:#ccc;} 

