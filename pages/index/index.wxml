<view class='scroll'>
  <view class='scrollCon'>
  <swiper 
    autoplay="true"
    circular="true"
    bindchange="swiperChange">
    <block wx:for="{{swiperList}}" wx:key="{{item}}">
        <swiper-item>
            <navigator url="/pages/web-view/web-view?view_index={{index}}">
                <image class='scrollImg' src='{{item}}'  />
            </navigator>
        </swiper-item>
    </block>
  </swiper>
  </view>
  <view class='scrollIco'>
    <block wx:for="{{swiperList}}" wx:key="{{item}}">
        <icon class="{{index === swiperActive ? 'cur': ''}}"></icon>    
    </block>
  </view>
</view>
